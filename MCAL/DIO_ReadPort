#include "std_types.h"
#include "tm4c123gh6pm.h"
#include "MCAL.h"


uint8 DIO_ReadPort(uint8 port_index,uint8 pins_mask){

switch(port_index){
	case PORTA: {return (GPIO_PORTA_DATA_R&pins_mask); }
	case PORTB:	{return (GPIO_PORTB_DATA_R&pins_mask); }
	case PORTC:	{return (GPIO_PORTC_DATA_R&pins_mask); }
	case PORTD:	{return (GPIO_PORTD_DATA_R&pins_mask); }
	case PORTE:	{return (GPIO_PORTE_DATA_R&pins_mask); }
	case PORTF:	{return (GPIO_PORTF_DATA_R&pins_mask); }
	
}
	
}
